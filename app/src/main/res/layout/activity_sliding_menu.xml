<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_bg"
    tools:context="com.zhzao.menutwodemo.Sliding_menuActivity">
<RelativeLayout
    android:id="@+id/menu_head"
    android:background="@color/bg_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100">

    <TextView
        android:text="〈 返回"
        android:textSize="@dimen/x34"
        android:layout_marginLeft="@dimen/x20"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/x34"
       android:layout_centerInParent="true"
        android:textColor="#fff"
        android:text="设置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/menu_h1"
        android:background="#fff"
        android:layout_marginTop="@dimen/y20"
        android:layout_below="@+id/menu_head"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <RelativeLayout

                android:paddingLeft="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100">
                <TextView
                    android:text="检查更新"
                    android:textSize="@dimen/x35"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="@dimen/x70"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/verson_name"
                    android:text="0.0.1"
                    android:textSize="@dimen/x35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="@dimen/x30"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text=" 〉"
                    android:textSize="@dimen/x35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/x20"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/y6"
                android:background="@color/bg_bg"
                ></View>
        <RelativeLayout

            android:paddingLeft="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100">
            <TextView
                android:text="意见反馈"
                android:textSize="@dimen/x35"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text=" 〉"
                android:textSize="@dimen/x35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu_h2"
        android:background="#fff"
        android:layout_marginTop="@dimen/y20"
        android:layout_below="@+id/menu_h1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:paddingLeft="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100">
            <TextView
                android:text="关于一刻钟"
                android:textSize="@dimen/x35"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text=" 〉"
                android:textSize="@dimen/x35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/x20"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/y6"
            android:background="@color/bg_bg"
            ></View>
        <RelativeLayout

            android:paddingLeft="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100">
            <TextView
                android:text="清除缓存"
                android:textSize="@dimen/x35"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="@dimen/x70"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/cache"
                android:text="128M"
                android:textSize="@dimen/x35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text=" 〉"
                android:textSize="@dimen/x35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:textColor="#fff"
        android:background="@drawable/back_login"
        android:text="退出登录"
        android:layout_marginTop="@dimen/y30"
        android:layout_below="@+id/menu_h2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90" />
</RelativeLayout>
