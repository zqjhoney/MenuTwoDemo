<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhzao.menutwodemo.Per_Msg_Activity">

    <RelativeLayout
        android:padding="5dp"
        android:background="@color/bg_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <ImageView
            android:id="@+id/per_back"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="个人信息"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/waterview_item"
        android:id="@+id/per_ic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/per_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/raw_1499936862" />
    </RelativeLayout>
    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:id="@+id/per_name"
        android:background="@drawable/waterview_item"
        android:padding="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:text="用户名"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/username"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="未登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:background="@drawable/waterview_item"
        android:id="@+id/per_nkname"
        android:padding="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/photo_name"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="未登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text=">"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/per_wait"
        android:src="@drawable/t"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y300" />

</LinearLayout>
