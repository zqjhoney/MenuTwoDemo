<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login1"
    tools:context="com.zhzao.menutwodemo.WelcomeActivity">

    <ImageView
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/y50"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y60"
        android:src="@drawable/back" />

    <ImageView
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y140"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/wx"
        android:layout_above="@+id/qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y20"
        android:background="@drawable/back_btu">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/w1"
            android:src="@drawable/weixin"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80" />
        <TextView
            android:layout_marginLeft="@dimen/x20"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/w1"
            android:text="微信登录"
            android:textSize="18dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/qq"
        android:gravity="center_horizontal"
        android:layout_above="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y60"
        android:background="@drawable/backqq_btu">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/q1"
            android:src="@drawable/qq"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80" />
        <TextView
            android:layout_marginLeft="@dimen/x20"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/q1"
            android:text="QQ登录"
            android:textSize="18dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/other"
        android:textColor="@color/grey_50"
        android:textSize="18dp"
        android:layout_marginBottom="@dimen/y35"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="其他登录方式"
        android:gravity="center"
        android:layout_width="@dimen/x290"
        android:layout_height="@dimen/y100" />

</RelativeLayout>
