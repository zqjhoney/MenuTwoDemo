<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/huanghun"
    android:layout_height="match_parent">
    <!--android:fitsSystemWindows="true"-->
    <!--android:clipToPadding="true" -->
    <RelativeLayout
        android:id="@+id/menu_head"
        android:background="@color/bg_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <TextView
            android:id="@+id/end_cancle"
            android:text="〈   取消"
            android:textSize="@dimen/x34"
            android:layout_marginLeft="@dimen/x20"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/x34"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:text="创作"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/video_Msg"
        android:background="@drawable/shape_create_bg"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/x190"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/x250"
        >
        <ImageView
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y140"
            android:src="@drawable/video_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/x50"
            android:text="视频"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/talk_Msg"
        android:layout_below="@+id/video_Msg"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_create_bg"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y150"
        android:gravity="center"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/x250"
        >
        <ImageView
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y140"
            android:src="@drawable/writer_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/x50"
            android:text="段子"
            />
    </LinearLayout>

</RelativeLayout>
