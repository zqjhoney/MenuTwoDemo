<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bk"
    tools:context="com.zhzao.menutwodemo.chat.LoginChatActivity">
    <ImageView
        android:layout_marginTop="@dimen/y100"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar6"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/chat__user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:hint="用户名"
        android:inputType="text"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/chat_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:hint="请输入密码"
        android:inputType="numberPassword"
        android:imeOptions="actionNext"/>


    <Button
        android:id="@+id/chat_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_send_pressed"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="登录"/>
    <TextView
        android:id="@+id/new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户"
        android:textColor="@color/bule"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>
